<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.henryzheng.avtivitysourcetest.View.scrollViewTest.ScrollViewActivity">

    <com.example.henryzheng.avtivitysourcetest.View.scrollViewTest.TestScrollView
        android:layout_width="wrap_content"
        android:layout_height="500dp"
        android:layout_gravity="center_vertical"
        android:background="#AA444444"
        android:id="@+id/testScrollView"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/id_gallery"
            android:layout_width="wrap_content"
            android:layout_height="500dp"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <com.example.henryzheng.avtivitysourcetest.View.scrollViewTest.TransFormView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:background="#e207a0"></com.example.henryzheng.avtivitysourcetest.View.scrollViewTest.TransFormView>

            <com.example.henryzheng.avtivitysourcetest.View.scrollViewTest.TransFormView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:background="#00ff00"></com.example.henryzheng.avtivitysourcetest.View.scrollViewTest.TransFormView>

            <com.example.henryzheng.avtivitysourcetest.View.scrollViewTest.TransFormView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:background="#0037ff"></com.example.henryzheng.avtivitysourcetest.View.scrollViewTest.TransFormView>

            <com.example.henryzheng.avtivitysourcetest.View.scrollViewTest.TransFormView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:background="#d1620d"></com.example.henryzheng.avtivitysourcetest.View.scrollViewTest.TransFormView>

            <com.example.henryzheng.avtivitysourcetest.View.scrollViewTest.TransFormView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:background="#0037ff"></com.example.henryzheng.avtivitysourcetest.View.scrollViewTest.TransFormView>

            <com.example.henryzheng.avtivitysourcetest.View.scrollViewTest.TransFormView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:background="#0ad7e9">

            </com.example.henryzheng.avtivitysourcetest.View.scrollViewTest.TransFormView>

            <com.example.henryzheng.avtivitysourcetest.View.scrollViewTest.TransFormView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:background="#ffdd00"></com.example.henryzheng.avtivitysourcetest.View.scrollViewTest.TransFormView>
        </LinearLayout>
    </com.example.henryzheng.avtivitysourcetest.View.scrollViewTest.TestScrollView>


</RelativeLayout>
